# Gidh Analytics Environment Configuration

# --- Kite Connect API Credentials ---
# Kite Connect access token generated after login
KITE_ACCESS_TOKEN=
# Kite Connect API key provided by Zerodha
KITE_API_KEY=

# --- Logging detail level ---
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# --- Pipeline Mode ---
# Set to 'backtesting' for historical data or 'realtime' for live market data
PIPELINE_MODE=backtesting

# --- Faster Mode for Backtesting ---
# Set to 'false' to disable writing to live_ticks and live_order_depth during backtesting
BACKTEST_SAVE_RAW_TICKS=true

# --- Database Connection ---
# Database user for TimescaleDB/PostgreSQL
DB_USER=
# Database password
DB_PASSWORD=
# Database host
DB_HOST=localhost
# Database port
DB_PORT=5432
# Primary database name
DB_NAME=gidh_analytics
# Dedicated database name for backtesting
DB_NAME_BACKTEST=gidh_backtest

# --- Backtesting Paths ---
# Directory where .tar.xz historical data backups are stored
BACKTEST_BACKUP_DIR=
# Directory where files should be extracted for processing
BACKTEST_DATA_DIRECTORY=
# The specific date to backtest in YYYY-MM-DD format
BACKTEST_DATE=2026-01-16
# The delay in seconds between sending each tick (0 for max speed)
BACKTEST_SLEEP_DURATION=0
# Controls if the DB is wiped for the current date before running
TRUNCATE_TABLES_ON_BACKTEST=true

# --- Data Processing Configuration ---
# The duration in minutes of the in-memory data window for feature calculation
DATA_WINDOW_MINUTES=60